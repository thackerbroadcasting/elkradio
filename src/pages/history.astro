---
import Container from "@components/Container.astro";
import PageLayout from "@layouts/PageLayout.astro";
import { EXTERNAL_LINK, HISTORY } from "@consts";

const lightThemeSrc = `${EXTERNAL_LINK.DESCRIPTION}/history?theme=light`;
const darkThemeSrc = `${EXTERNAL_LINK.DESCRIPTION}/history?theme=dark`;

---

<PageLayout title={HISTORY.TITLE} description={HISTORY.DESCRIPTION}>
    <Container>
      <h1 class="animate font-semibold text-black dark:text-white">
        Playout History
      </h1>
      <br>
      <br>
      <p class="animate">
        <!-- LIGHT MODE -->
        <iframe class="dark:hidden" src={lightThemeSrc} allowtransparency="true" style="width: 100%; min-height: 850px"></iframe>
        <!-- DARK MODE -->
        <iframe class="hidden dark:block" src={darkThemeSrc} allowtransparency="true" style="width: 100%; min-height: 850px; color-scheme: light;"></iframe>
      </p>
    </Container>
</PageLayout>
